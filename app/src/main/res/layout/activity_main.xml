<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#ff30af57">

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="RSS-App"
            android:id="@+id/txtTitle"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_margin="3dp"
            android:textStyle="bold"
            android:typeface="serif"
            android:textAlignment="center"
            android:textIsSelectable="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Die offizielle App der Realschule Schöllnach"
            android:id="@+id/txtSubtitle"
            android:layout_row="1"
            android:layout_column="0"
            android:gravity="right"
            android:layout_gravity="right" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:text="Info"
            android:id="@+id/btnNeu"
            android:layout_row="8"
            android:layout_column="0"
            android:onClick="onButtonClickI" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:text="Termine"
            android:id="@+id/btnTermine"
            android:layout_row="23"
            android:layout_column="0"
            android:layout_gravity="top"
            android:onClick="onButtonClickI" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:text="Sprechstunden"
            android:id="@+id/btnSprechstunden"
            android:layout_row="26"
            android:layout_column="0"
            android:layout_gravity="top"
            android:onClick="onButtonClickI" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="(c) 2015 - RS Schöllnach"
            android:id="@+id/txtCopyright"
            android:layout_row="38"
            android:layout_column="0"
            android:layout_gravity="center_horizontal" />
    </GridLayout>
</RelativeLayout>
